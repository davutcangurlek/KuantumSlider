@model KuantumSliderSettings

@{

    <link rel="stylesheet" href="~/Plugins/Kuantum.Widgets.Slider/Content/lib/Swiper/swiper-bundle.css" />
<link rel="stylesheet" href="~/Plugins/Kuantum.Widgets.Slider/Content/css/Style.css" />
<script asp-exclude-from-bundle="true" src="~/Plugins/Kuantum.Widgets.Slider/Content/lib/Swiper/swiper-bundle.js" asp-location="Footer"></script>
}

<div class="swiper">
  
  <div class="swiper-wrapper">
    
    <div class="swiper-slide">Slide 1</div>
    <div class="swiper-slide">Slide 2</div>
    <div class="swiper-slide">Slide 3</div>
  </div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
  <div class="swiper-scrollbar"></div>

</div>


<script type="text/javascript">
    const swiper = new Swiper('@Model.ContainerCssSelector', {
  // Optional parameters
  direction: '@Model.Direction.ToString().ToLower()',
  loop: true,

  // If we need pagination
  pagination: {
    el: '@Model.PaginationSelector',
  },

  // Navigation arrows
  navigation: {
    nextEl: '@Model.NavigationNextCssSelector',
    prevEl: '@Model.NavigationPrevCssSelector',
  },

  // And if we need scrollbar
  scrollbar: {
    el: '@Model.ScrollBarCssSelector',
  },
});

    </script>